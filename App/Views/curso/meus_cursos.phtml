<?php else: ?>
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 20px;">
        <?php foreach ($this->view->meus_cursos as $curso): ?>
            <div style="border: 1px solid #ccc; border-radius: 8px; padding: 16px; background: #fff;">
                <h3><?= $curso['titulo'];?></h3>
                <p><?= $curso['descricao']; ?></p>
                <a href="/painel/curso?id=<?= $curso['id'] ?>" style="display: inline-block; margin-top: 10px; padding: 8px 16px; background: #28a745; color: white; text-decoration: none; border-radius: 5px;">Ver Conteúdo</a>
            </div>
        <?php endforeach; ?>
